<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_res_config_settings_eventbrite" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.eventbrite</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//block[@id='user_default_rights']" position="before">
        <block title="Eventbrite Sync" id="eventbrite_sync_setting_block">
          <div class="row mt16 o_settings_container">
                             <div class="col-12 col-lg-6 mb-3">
                   <label for="eventbrite_api_token" class="me-2">
                     Eventbrite API Token
                   </label>
                   <field name="eventbrite_api_token" password="True" placeholder="Enter your Eventbrite API token here"/>
                 </div>
                 <div class="col-12 col-lg-6 mb-3">
                   <label for="eventbrite_location" class="me-2">
                     Search Location
                   </label>
                   <field name="eventbrite_location" placeholder="e.g., New York, Los Angeles, London"/>
                 </div>
            <div class="col-12 col-lg-4 mb-3">
              <button type="action" class="btn btn-primary"
                      name="%(ir_actions_server_eventbrite_fetch_events)d"
                      invisible="not eventbrite_api_token">
                Fetch Events
              </button>
            </div>
                             <div class="col-12 mb-3">
                   <div class="alert alert-info">
                     <strong>How it works:</strong><br/>
                     1. Enter your Eventbrite API Token<br/>
                     2. Enter your city name (e.g., New York, London)<br/>
                     3. Click "Fetch Events" to get events from that location<br/>
                     4. Events will appear on your website automatically<br/>
                     5. Sync runs every 5 hours to keep events updated
                   </div>
                 </div>
          </div>
        </block>
      </xpath>
    </field>
  </record>
</odoo>


