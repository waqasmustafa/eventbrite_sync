<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Show Ticketmaster fields in backend for reference -->
  <record id="view_event_form_ticketmaster_minimal" model="ir.ui.view">
    <field name="name">event.event.form.ticketmaster.minimal</field>
    <field name="model">event.event</field>
    <field name="inherit_id" ref="event.view_event_form"/>
    <field name="arch" type="xml">
      <xpath expr="//sheet/notebook" position="inside">
        <page string="Ticketmaster">
          <group>
            <field name="ticketmaster_id" readonly="1"/>
            <field name="ticketmaster_status" readonly="1"/>
            <field name="event_category" readonly="1"/>
            <field name="venue_name" readonly="1"/>
            <field name="external_url"/>
            <field name="last_synced_at" readonly="1"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>


